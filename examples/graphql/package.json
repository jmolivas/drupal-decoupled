{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development npm run wrangler",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "start": "cross-env NODE_ENV=production npm run wrangler",
    "sync:genql": "npx ts-node scripts/sync-genql.ts",
    "typecheck": "tsc",
    "wrangler": "wrangler pages dev ./public",
    "wrangler:deploy": "remix build && wrangler pages deploy --project-name drupal-remix ./public",
    "wrangler:tail:production": "wrangler pages deployment tail --project-name drupal-remix",
    "wrangler:tail:preview": "wrangler pages deployment tail --project-name drupal-remix --environment preview"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.16.0",
    "@remix-run/cloudflare-pages": "^1.16.0",
    "@remix-run/css-bundle": "^1.16.0",
    "@remix-run/react": "^1.16.0",
    "@tailwindcss/typography": "^0.5.9",
    "classnames": "^2.3.2",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "drupal-auth-client": "^0.2.0",
    "drupal-composable": "^0.1.0",
    "drupal-remix": "^0.2.0",
    "isbot": "^3.7.1",
    "react": "^18.2.0",
    "react-code-blocks": "^0.1.5",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20231121.0",
    "@genql/cli": "^6.2.1",
    "@remix-run/dev": "^1.16.0",
    "@remix-run/eslint-config": "^1.16.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "eslint": "^8.55.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "wrangler": "^3.20.0"
  },
  "engines": {
    "node": ">=16.13"
  }
}
